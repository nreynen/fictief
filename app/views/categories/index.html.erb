<h1>Categories</h1>
<div id="searchwrapper">
  <%= will_paginate @categories, :params => params %>
  <table class="showtable">
    <tbody class="table_header">
      <td class="header_cell">Id</td>
      <td class="header_cell">Name</td>
      <td class="display_none_header_cell"></td>
      <td class="display_none_header_cell"></td>
      <td class="header_cell"><%= @categories.total_entries %></td>
    </tbody>
    <tbody class="button_row">
      <td colspan="2" class="header_cell"><%= new_link :url => new_category_path %></td>
    </tbody>
    <% @categories.each do |category| %>
      <tbody class="<%= cycle("even","odd") %>">
        <td>
          <%= category.id %>
        </td>
        <td>
          <%= category.name %>
        </td>
        <td class="button_cell"><%= edit_link :url => edit_category_path(category) %></td>
        <td class="button_cell"><%= destroy_link :url => category_path(category) %></td>
        <td class="button_cell"><%= show_link :url => category_path(category) %></td>
      </tbody>
    <% end %>
  </table>
</div>