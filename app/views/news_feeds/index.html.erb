<h1>NewsFeeds</h1>
<div id="searchwrapper">
  <%= will_paginate @feeds, :params => params %>
  <table class="showtable">
    <tbody class="table_header">
      <td class="header_cell">Id</td>
      <td class="header_cell">Text</td>
      <td class="header_cell"><%= @feeds.total_entries %></td>
    </tbody>
    <tbody class="button_row">
      <td colspan="2" class="header_cell"><%= new_link :url => new_news_feed_path %></td>
    </tbody>
    <% @feeds.each do |feed| %>
      <tbody class="<%= cycle("even","odd") %>">
        <td>
          <%= feed.id %>
        </td>
        <td>
          <%= shorten feed.text, 50 %>
        </td>
        <td class="button_cell">&nbsp;</td>
      </tbody>
    <% end %>
  </table>
</div>