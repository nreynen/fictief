<div id="content_wrapper">
  <h1>Serie Overview</h1>
  <table class="showtable">
    <tbody class="table_header">
      <td class="header_cell">Name</td>
      <td class="header_cell">Author</td>
      <td class="display_none_header_cell"></td>
      <td class="display_none_header_cell"></td>
      <td class="header_cell"><%= @count %></td>
    </tbody>
    <tbody class="button_row">
      <td class="header_cell"><%= link_to "New serie...", new_book_series_path %></td>
    </tbody>
    <% @series.each do |serie| %>
      <tbody class="<%= cycle("even","odd") %>">
        <td>
          <%= serie[:name] %>
        </td>
        <td>
          <%= serie.book_author[:name] rescue "Please update..." %>
        </td>
        <td class="button_cell"><%= link_to("Show", book_series_path(serie)) if @has_rights %></td>
        <td class="button_cell"><%= link_to("Edit", edit_book_series_path(serie)) if @has_rights %></td>
        <td class="button_cell"><%= link_to("Destroy", book_series_path(serie), :confirm => "Are you sure?", :method => :delete) if @has_rights %></td>
      </tbody>
    <% end %>
  </table>
</div>
