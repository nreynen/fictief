<h1>Series</h1>
<%= will_paginate @series, :params => params %>
<div class="grid_table" style="width: 500px;">
  <div class="grid_header">
    <div class="grid_row">
      <div style="width: 10%;" class="grid_cell">ID</div>
      <div style="width: 35%;" class="grid_cell">Name</div>
      <div style="width: 35%;" class="grid_cell">Author</div>
      <div style="width: 20%;" class="grid_cell">&nbsp;</div>
    </div>
  </div>
  <div class="grid_body">
    <% @series.each do |serie| %>
      <div class="grid_row <%= cycle("even", "odd") %>">
        <div style="width: 10%;" class="grid_cell"><%= serie.id %></div>
        <div style="width: 35%;" class="grid_cell leftalign"><%= serie.name %></div>
        <div style="width: 35%;" class="grid_cell leftalign"><%= serie.author.name %></div>
        <div style="width: 20%;" class="grid_cell"><%= edit_link :url => edit_book_series_path(serie) %>&nbsp;&nbsp;<%= show_link :url => book_series_path(serie) %></div>
      </div>
    <% end %>
  </div>
</div>

<div class="submit_row">
  <%= back_link :url => home_root_index_path %>
  <%= new_link :url => new_book_series_path %>
</div>