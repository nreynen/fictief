<div>
  <h1>Editing serie</h1>
  <table class="showtable">
    <% form_for @serie, :url => book_series_path(@serie) do |f| %>
      <%= render(:partial => 'form', :locals => { :f => f, :serie => @serie }) %>
      <tr>
        <td colspan="2"><%= f.submit "Update" %></td>
      </tr>
    <% end %>
    <tr class="button_row">
      <td colspan="2"><%= link_to "Show", book_series_path(@serie) %> | <%= link_to "Back", book_series_index_path %></td>
    </tr>
  </table>
</div>