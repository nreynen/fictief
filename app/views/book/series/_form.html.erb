<% if serie.errors.any? %>
  <div class="error_message">
    <p>
      <%= serie.errors.full_messages.join("<br>").html_safe %>
    </p>
  </div>
<% end %>

<div class="grid_table" style="width: 500px;">
  <div class="grid_body">
    <%= grid_row("Name:", cycle("even", "odd")){f.text_field :name, :style => "width: 90%;"} %>
    <%= grid_row("Author:", cycle("even", "odd")){f.select :author_id, options_from_collection_for_select(Book::Author.ordered_by_name, :id, :name, serie.author_id), :include_blank => true} %>
  </div>
</div>