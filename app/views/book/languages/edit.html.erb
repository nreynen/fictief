<div>
  <h1>Editing language</h1>
  <table class="showtable">
    <% form_for @language, :url => book_language_path(@language) do |f| %>
      <%= render(:partial => 'form', :locals => { :f => f, :language => @language }) %>
      <tr>
        <td colspan="2"><%= f.submit "Update" %></td>
      </tr>
    <% end %>
    <tr class="button_row">
      <td colspan="2"><%= link_to "Show", book_language_path(@language) %> | <%= link_to "Back", book_languages_path %></td>
    </tr>
  </table>
</div>