<h1>Books</h1>
<%= will_paginate @books, :params => params %>
<div class="grid_table" style="width: 500px;">
  <div class="grid_header">
    <div class="grid_row">
      <div style="width: 10%;" class="grid_cell">ID</div>
      <div style="width: 35%;" class="grid_cell">Name</div>
      <div style="width: 35%;" class="grid_cell">Author</div>
      <div style="width: 20%;" class="grid_cell">&nbsp;</div>
    </div>
  </div>
  <div class="grid_body">
    <% @books.each do |book| %>
      <div class="grid_row <%= cycle("even", "odd") %>">
        <div style="width: 10%;" class="grid_cell"><%= book.id %></div>
        <div style="width: 35%;" class="grid_cell leftalign"><%= book.title %></div>
        <div style="width: 35%;" class="grid_cell leftalign"><%= book.author.name %></div>
        <div style="width: 20%;" class="grid_cell"><%= edit_link :url => edit_book_book_path(book) %>&nbsp;&nbsp;<%= show_link :url => book_book_path(book) %></div>
      </div>
    <% end %>
  </div>
</div>

<div class="submit_row">
  <%= back_link :url => home_root_index_path %>
  <%= new_link :url => new_book_book_path %>
</div>