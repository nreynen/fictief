<div>
  <h1>Editing book</h1>
  <table class="showtable">
    <% form_for @book, :url => book_book_path(@book) do |f| %>
      <%= render(:partial => 'form', :locals => { :f => f, :book => @book }) %>
      <tr>
        <td colspan="2"><%= f.submit "Update" %></td>
      </tr>
    <% end %>
    <tr class="button_row">
      <td colspan="2"><%= link_to "Show", book_book_path(@book) %> | <%= link_to "Back", book_books_path %></td>
    </tr>
  </table>
</div>