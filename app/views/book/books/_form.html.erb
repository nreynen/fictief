<% if book.errors.any? %>
  <div class="error_message">
    <p>
      <%= book.errors.full_messages.join("<br>").html_safe %>
    </p>
  </div>
<% end %>

<div class="grid_table" style="width: 500px;">
  <div class="grid_body">
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Title*:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.text_field :title, :style => "width: 90%;" %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Author*:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.select :author_id, options_from_collection_for_select(Book::Author.ordered_by_name, :id, :name, book.author_id), :include_blank => true %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Publisher*:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.select :publisher_id, options_from_collection_for_select(Book::Publisher.ordered_by_name, :id, :name, book.publisher_id), :include_blank => true %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">ISBN:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.text_field :isbn, :style => "width: 90%;" %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Pages:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.text_field :pages, :style => "width: 90%;" %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Genre:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.select :genre_id, options_from_collection_for_select(Book::Genre.ordered_by_name, :id, :name, book.genre_id), :include_blank => true %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Print nr:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.text_field :print_nr, :style => "width: 90%;" %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Print Year:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.text_field :print_year, :style => "width: 90%;" %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Language:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.select :language_id, options_from_collection_for_select(Language.ordered_by_name, :id, :name, book.language_id), :include_blank => true %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Original Language:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.select :original_language_id, options_from_collection_for_select(Language.ordered_by_name, :id, :name, book.original_language_id), :include_blank => true %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Serie:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.select :serie_id, options_from_collection_for_select(Book::Serie.ordered_by_name, :id, :name, book.serie_id), :include_blank => true %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Serie nr:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.text_field :serie_nr, :style => "width: 90%;" %></div>
    </div>
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Comment:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.text_area :comment, :style => "width: 90%; height: 15px;" %></div>
    </div>
  </div>
</div>