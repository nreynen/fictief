<div>
  <h1>Editing genre</h1>
  <table class="showtable">
    <% form_for @genre, :url => book_genre_path(@genre) do |f| %>
      <%= render(:partial => 'form', :locals => { :f => f, :genre => @genre }) %>
      <tr>
        <td colspan="2"><%= f.submit "Update" %></td>
      </tr>
    <% end %>
    <tr class="button_row">
      <td colspan="2"><%= link_to "Show", book_genre_path(@genre) %> | <%= link_to "Back", book_genres_path %></td>
    </tr>
  </table>
</div>