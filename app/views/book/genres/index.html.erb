<h1>Genres</h1>
<%= will_paginate @genres, :params => params %>
<div class="grid_table" style="width: 500px;">
  <div class="grid_header">
    <div class="grid_row">
      <div style="width: 10%;" class="grid_cell">ID</div>
      <div style="width: 70%;" class="grid_cell">Name</div>
      <div style="width: 20%;" class="grid_cell">&nbsp;</div>
    </div>
  </div>
  <div class="grid_body">
    <% @genres.each do |genre| %>
      <div class="grid_row <%= cycle("even", "odd") %>">
        <div style="width: 10%;" class="grid_cell"><%= genre.id %></div>
        <div style="width: 70%;" class="grid_cell leftalign"><%= genre.name %></div>
        <div style="width: 20%;" class="grid_cell"><%= edit_link :url => edit_book_genre_path(genre) %>&nbsp;&nbsp;<%= show_link :url => book_genre_path(genre) %></div>
      </div>
    <% end %>
  </div>
</div>

<div class="submit_row">
  <%= back_link :url => home_root_index_path %>
  <%= new_link :url => new_book_genre_path %>
</div>