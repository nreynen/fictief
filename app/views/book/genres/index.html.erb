<div id="content_wrapper">
  <h1>Genre Overview</h1>
  <table class="showtable">
    <tbody class="table_header">
      <td class="header_cell">Name</td>
      <td class="display_none_header_cell"></td>
      <td class="display_none_header_cell"></td>
      <td class="header_cell"><%= @count %></td>
    </tbody>
    <tbody class="button_row">
      <td class="header_cell"><%= link_to "New genre...", new_book_genre_path %></td>
    </tbody>
    <% @genres.each do |genre| %>
      <tbody class="<%= cycle("even","odd") %>">
        <td>
          <%= genre[:name] %>
        </td>
        <td class="button_cell"><%= link_to("Show", book_genre_path(genre)) if @has_rights %></td>
        <td class="button_cell"><%= link_to("Edit", edit_book_genre_path(genre)) if @has_rights %></td>
        <td class="button_cell"><%= link_to("Destroy", book_genre_path(genre), :confirm => "Are you sure?", :method => :delete) if @has_rights %></td>
      </tbody>
    <% end %>
  </table>
</div>
