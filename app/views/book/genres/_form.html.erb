<% if genre.errors.any? %>
  <div class="error_message">
    <p>
      <%= genre.errors.full_messages.join("<br>").html_safe %>
    </p>
  </div>
<% end %>

<div class="grid_table" style="width: 500px;">
  <div class="grid_body">
    <div class="grid_row <%= cycle("even", "odd") %>">
      <div style="width: 30%;" class="grid_cell rightalign">Name:</div>
      <div style="width: 70%;" class="grid_cell leftalign"><%= f.text_field :name, :style => "width: 90%;" %></div>
    </div>
  </div>
</div>