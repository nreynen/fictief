<div>
  <h1>New author</h1>
  <table class="showtable">
    <% form_for @author, :url => book_authors_path do |f| %>
      <%= render(:partial => 'form', :locals => { :f => f, :author => @author }) %>
      <tr>
        <td colspan="2"><%= f.submit "Create" %></td>
      </tr>
    <% end %>
    <tr class="button_row">
      <td colspan="2"><%= link_to "Back", book_authors_path %></td>
    </tr>
  </table>
</div>