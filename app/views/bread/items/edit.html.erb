<h1>Edit Item</h1>

<%= form_for @item, :url => bread_item_path(@item) do |f| %>
  <%= render(:partial => 'form', :locals => { :f => f, :item => @item }) %>
<% end %>

<div class="submit_row">
  <%= link_to_function "Update", "$('form').last().submit();" %>
  <%= show_link :text => put("link_show"), :url => bread_item_path(@item) %>
  <%= back_link :url => bread_items_path %>
</div>