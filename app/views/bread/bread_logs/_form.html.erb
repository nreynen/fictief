<% if bread_log.errors.any? %>
  <div class="error_message">
    <p>
      <%= bread_log.errors.full_messages.join("<br>").html_safe %>
    </p>
  </div>
<% end %>

<div class="grid_table" style="width: 500px;">
  <div class="grid_body">
    <%= grid_row("Category:", cycle("even", "odd")){select_tag("bread_bread_log[cat_id]", options_for_select(BREAD_LOG_CAT.sort{|a, b| a[1] <=> b[1]}.inject([]){|a, (k, v)| a << [v, k]; a}))} %>
    <%= grid_row("Date: (DD/MM/YYYY)", cycle("even", "odd")){text_field_tag "log_date", (bread_log.event_date.strftime("%d/%m/%Y") rescue Date.today.strftime("%d/%m/%Y")), :style => "width: 90%;"} %>
    <%= grid_row("Price: (00.00)", cycle("even", "odd")){f.text_field :price, :style => "width: 90%;"} %>
  </div>
</div>