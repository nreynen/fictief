<h1>Edit Order</h1>

<%= form_for @order, :url => bread_order_path(@order) do |f| %>
  <%= render(:partial => 'form', :locals => { :f => f, :order => @order }) %>
<% end %>

<div class="submit_row">
  <%= link_to_function "Update", "if (confirm(\"#{put("order_alert_update")}\")){$('form').last().submit();}" %>
  <%= show_link :text => put("link_show"), :url => bread_order_path(@order) %>
  <%= back_link :url => bread_orders_path %>
  <a href="javascript:void(0);" id="overview_hover" style="float: left; margin-left: 5px;">Hover for overview</a>
</div>