<h1>Categories</h1>
<%= will_paginate @categories, :params => params %>
<div class="grid_table" style="width: 500px;">
  <div class="grid_header">
    <div class="grid_row">
      <div style="width: 10%;" class="grid_cell">ID</div>
      <div style="width: 70%;" class="grid_cell">Name</div>
      <div style="width: 20%;" class="grid_cell">&nbsp;</div>
    </div>
  </div>
  <div class="grid_body">
    <% @categories.each do |category| %>
      <div class="grid_row <%= cycle("even", "odd") %>">
        <div style="width: 10%;" class="grid_cell"><%= category.id %></div>
        <div style="width: 70%;" class="grid_cell leftalign"><%= category.name %></div>
        <div style="width: 20%;" class="grid_cell"><%= edit_link :url => edit_bread_category_path(category) %>&nbsp;&nbsp;<%= destroy_link :url => bread_category_path(category) %>&nbsp;&nbsp;<%= show_link :url => bread_category_path(category) %></div>
      </div>
    <% end %>
  </div>
</div>

<div class="submit_row">
  <%= back_link :url => home_root_index_path %>
  <%= new_link :url => new_bread_category_path %>
</div>