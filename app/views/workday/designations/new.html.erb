<div>
  <h1>New designation</h1>
  <table class="showtable">
    <% form_for @designation, :url => workday_designations_path do |f| %>
      <%= render(:partial => 'form', :locals => { :f => f, :designation => @designation }) %>
      <tr>
        <td colspan="2"><%= f.submit "Create" %></td>
      </tr>
    <% end %>
    <tr class="button_row">
      <td colspan="2"><%= link_to "Back", workday_designations_path %></td>
    </tr>
  </table>
</div>