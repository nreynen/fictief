<div>
  <h1>New Order</h1>
  <table class="showtable">
    <% form_for @order, :url => orders_path do |f| %>
      <%= render(:partial => 'form', :locals => { :f => f, :order => @order }) %>
      <tr>
        <td colspan="2"><%= f.submit "Add" %>&nbsp;<%= back_link :url => orders_path %></td>
      </tr>
    <% end %>
  </table>
</div>